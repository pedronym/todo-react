{
  "name": "todo-react",
  "description": "Todo App build using React and local storage.",
  "author": "Pedro Lima Â© 2018 | www.pmlima.com",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "node-sass-chokidar": "^1.2.2",
    "npm-run-all": "^4.1.2",
    "react-scripts": "0.9.0"
  },
  "dependencies": {
    "bulma": "^0.6.2",
    "prop-types": "^15.6.1",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-motion": "^0.5.2",
    "react-spring": "^5.9.2"
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "build-css": "node-sass-chokidar src/styles/scss -o src/styles/css",
    "watch-css": "npm run build-css && node-sass-chokidar src/styles/scss -o src/styles/css --watch --recursive",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
